
div
    include ../../vue/Vue-Slots

    template( v-if="! slots.default" )

        template( v-for="(group, i) in data.groups" )

            div( v-show="!group.disabled" )

                v-divider( v-if="group.title" )

                v-list( :$vBind v-on="$vOn"  :key="i"  )

                    v-subheader( v-if="group.title" ) {{ group.title }}

                    v-list-item( v-for="(item, ii) in group.items" :key="ii" @click="item.click" )

                        v-list-item-icon( v-if="item.icon" )
                            v-icon {{ item.icon }}

                        v-list-item-content
                            v-list-item-title( v-text="item.title" )
                            v-list-item-subtitle( v-if="item.subtitle" v-html="item.subtitle" )

                        v-list-item-action( v-if="item.action" )
                            component( :is="item.action" )
