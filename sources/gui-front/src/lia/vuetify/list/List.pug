
v-list( v-bind="data" v-on="$vOn" )

    include ../../vue/Vue-Slots

    template( v-if="! slots.default" )

        v-list-item( v-for="(item, i) in data.items" :key="i" )

            v-list-item-icon( v-if="item.icon" )
                component( :is="item.icon" )

            v-list-item-content
                v-list-item-title( v-html="item.title" )
                v-list-item-subtitle( v-if="(data.twoLine || data.threeLine) && item.subtitle" v-html="item.subtitle" )

            v-list-item-action( v-if="item.action" )
                component( :is="item.action" )
